{
  "name": "haru-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server.js",
    "devStart": "nodemon server.ts",
    "dev": "docker-compose up",
    "dev:down": "docker-compose down && docker network prune",
    "dev:build": "docker-compose up --build",
    "build": "tsc -p .",
    "migrate:test": "dotenv -e .env.test -- npx prisma migrate dev --name postgres-init",
    "seed:test": "dotenv -e .env.test -- npx prisma db seed",
    "generate:test": "dotenv -e .env.test -- npx prisma generate",
    "test:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:down": "docker-compose -f docker-compose.test.yml down",
    "test": "npm run test:up && sleep 5; npm run migrate:test && npm run seed:test && dotenv -e .env.test jest -- --watchAll",
    "test:circle": "jest -i"
  },
  "prisma": {
    "seed": "ts-node db/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^3.1.1",
    "bcrypt": "^5.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.10.1",
    "@types/supertest": "^2.0.11",
    "jest": "^27.2.2",
    "jest-extended": "^0.11.5",
    "jest-mock-extended": "^2.0.4",
    "jest-sorted": "^1.0.12",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.13",
    "prisma": "^3.1.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
